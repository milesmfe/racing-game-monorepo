{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "22.0.0",

  "extends": "../../tsconfig.json",
  "references": [{ "path": "../../packages/core" }],

  "compilerOptions": {
    "lib": ["es2024", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator"],
    "module": "nodenext",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "paths": {
      "@server/*": ["./src/*"]
    }
  }
}
